<!-- Modal -->
@using Domain.Core.Enums
@model int
<div class="modal fade" id="createNews" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form method="post" action='@Url.Action("CreateNews", "News")' id="uploadImage" enctype="multipart/form-data">

                <input type="hidden" name="orgId" value="@Model">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create a new news</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" name="title" id="title" style="max-width: 100%">
                    </div>
                    <div class="form-group">
                        <label for="Text">Text:</label>
                        <textarea class="form-control" rows="5" name="Text" id="Text" style="max-width: 100%"></textarea>
                    </div>
                    
                    <div class="form-group">
                    <select class="selectCategory" name="category">
                        @{
                            var itemNames = Enum.GetValues(typeof(Category));
                        }
                           @foreach (var item in itemNames)
                           {
                            <option value="@item">@item</option>
                           }
                        </select>
                        </div>

                        <div class="form-group">
                            <label for="uploadEditorImage">Image:</label>
                            <input type="file" name="Image" id="uploadEditorImage" style="width: 100%;" />
                        </div>
                    </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-default createPost" data-dismiss="modal">Створити</button>
            </div>
        </div>

    </div>
</div>

